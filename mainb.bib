title = {Determination and optimization of mode matching into optical cavities by heterodyne detection}, 
volume = {25}, 
month = {Feb},
year = {2000},
doi = {10.1364/OL.25.000266},
abstract = {We report on a novel high-sensitivity method to characterize and improve mode matching into optical cavities. This method is based on heterodyne detection of cylindrical transverse cavity modes. A specially designed annular-segmented photodiode is used to measure the amplitude of nonresonant modes reflected by the cavity. Our measurements allow us to optimize cavity mode matching to nearly 99.98\% and will play an important diagnostic role in gravitational-wave detectors.},
