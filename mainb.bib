author = {Guido Mueller and Qi-ze Shu and Rana Adhikari and D. B. Tanner and David Reitze and Daniel Sigg and Nergis Mavalvala and Jordan Camp}, 
journal = {Opt. Lett.}, 
keywords = {Heterodyne; Instrumentation, measurement, and metrology; Fabry-Perot; Optical resonators},
number = {4}, 
pages = {266--268}, 
